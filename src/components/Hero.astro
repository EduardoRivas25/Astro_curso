<section class="w-full max-w-5xl mx-auto p-6">
    <div class="grid grid-cols-3 grid-rows-2 gap-2 w-full">
        <a
            href="https://www.spacex.com/launches/sl-6-96"
            target="_blank"
            class="relative group col-span-2 row-span-2 rounded-xl overflow-hidden border border-gray-700 shadow-lg hover:shadow-2xl transition-all duration-300 h-96"
        >
            <div
                class="absolute inset-0 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900"
            >
                <img
                    src="/starlink1.webp"
                    alt="SpaceX Launch"
                    class="w-full h-full object-cover opacity-90 transition-transform duration-500 group-hover:scale-105 group-hover:opacity-100
                    animate-pulse-fade-in"
                />
            </div>

            <div
                class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"
            >
            </div>

            <div class="relative h-full flex flex-col justify-between p-6">
                <span
                    class="w-fit text-xs font-semibold text-white bg-black/20 backdrop-blur-md border border-white/20 rounded px-2 py-0.5"
                >
                    Mission Starlink
                </span>

                <span class="text-white font-bold text-3xl tracking-tight">
                    Starlink 6-96
                </span>
            </div>
        </a>

        <a
            href="https://www.spacex.com/launches/cosmo-skymedfm3"
            target="_blank"
            class="relative group col-span-1 row-span-1 rounded-xl overflow-hidden border border-gray-700 shadow-lg hover:shadow-2xl transition-all duration-300 h-96"
        >
            <div
                class="absolute inset-0 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900"
            >
                <img
                    src="/starlink3.webp"
                    alt="SpaceX Launch"
                    class="w-full h-full object-cover opacity-90 transition-transform duration-500 group-hover:scale-105 group-hover:opacity-100
                    animate-pulse-fade-in"
                />
            </div>

            <div
                class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"
            >
            </div>

            <div class="relative h-full flex flex-col justify-between p-6">
                <span
                    class="w-fit text-xs font-semibold text-white bg-black/20 backdrop-blur-md border border-white/20 rounded px-2 py-0.5"
                >
                    Mission COSMO-SkyMed FM3
                </span>

                <span class="text-white font-bold text-3xl tracking-tight">
                    COSMO-SkyMed FM3
                </span>
            </div>
        </a>
    </div>
</section>
